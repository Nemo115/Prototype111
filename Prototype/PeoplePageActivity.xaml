<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Prototype.PeoplePageActivity">
    <ContentView.Content>
        <ScrollView Margin="0,0,0,0">
            <Grid>
                <Grid BackgroundColor="#F6F6F6" Margin="0,2,0,700">
                    <Label Text="Activity" VerticalOptions="Center" HorizontalOptions="Center"
                           TextColor="#00BCCF"/>
                </Grid>
                <StackLayout BackgroundColor="White" Margin="0,50,0,0">
                    <Label x:Name="NoActivity" Text="No Activity"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentView.Content>
</ContentView>
