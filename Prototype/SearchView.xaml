<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.SearchView" BackgroundColor="#E9E9E9" xmlns:local="clr-namespace:Prototype">
    <ContentPage.Content>
        <Grid x:Name="TopSearchBar" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" BackgroundColor="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>


            <SearchBar x:Name="SearchBar" BackgroundColor="White" HeightRequest="600" Margin="0,0,50,0"/>
            
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <Button x:Name="SettingsIcon" ImageSource="{local:ImageResource Prototype.assets.Search.TopSearchTab.SettingsIcon.settingsIcon3x.png}"
                    Grid.Column="5" 
                    Grid.ColumnSpan="1" Grid.RowSpan="1"
                    WidthRequest="300" HeightRequest="300"
                        HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>


                <Grid Margin="20,80,0,0" Grid.ColumnSpan="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12"/>
                    </Grid.RowDefinitions>
                    <Label Text="Bruh" TextColor="#FF8E5B" Grid.Column="2"/>
                    <Image Source="{local:ImageResource Prototype.assets.Search.TopSearchTab.TabLine3.png}"
                           WidthRequest="35" HeightRequest="70"
                           HorizontalOptions="Start" VerticalOptions="StartAndExpand"
                           Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="1"/>

                    <Label Text="Bruh" TextColor="#FF8E5B"/>

                    <Image Source="{local:ImageResource Prototype.assets.Search.TopSearchTab.TabLine3.png}"
                           WidthRequest="35" HeightRequest="70"
                           HorizontalOptions="Start" VerticalOptions="StartAndExpand"
                           Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="2"/>

                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
